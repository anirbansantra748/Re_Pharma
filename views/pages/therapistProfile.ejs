<% layout("/layouts/boilerplate") %>
<style>
    body { background-color: #e8effc; }
    .profile-card { background-color: white; border-radius: 12px; padding: 20px; }
    .left-card { background: #ffe6c4; border-radius: 12px; padding: 20px; text-align: center; }
    .profile-icon { font-size: 60px; color: #555; background: white; padding: 15px; border-radius: 50%; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); }
    .text-orange { color: #f57c00; }
    .btn-primary { background-color: #007bff; border: none; }
    .btn-primary:hover { background-color: #0056b3; }
    .btn-success:hover { background-color: #218838; }
    .info-icon { color: #f57c00; margin-right: 5px; }
</style>
</head>
<body>
    <div class="container mt-5">
        <div class="profile-card p-4 shadow-lg">
            <div class="row">
                <!-- Left Side -->
                <div class="col-md-4 left-card">
                    <div class="profile-img">
                        <i class="fas fa-user profile-icon"></i> <!-- Icon for profile -->
                    </div>
                    <h4 class="mt-3 fw-bold">
                        <%= therapist.user ? therapist.user.username : 'Unknown' %>
                    </h4>
                    <p class="text-muted"><%= therapist.specialization || 'No Specialization' %></p>
                    <p><i class="fas fa-phone-alt info-icon"></i> <%= therapist.phone || 'N/A' %></p>
                    <p><i class="fas fa-envelope info-icon"></i> <%= therapist.user ? therapist.user.email : 'N/A' %></p>
                    <p><i class="fas fa-map-marker-alt info-icon"></i> <%= therapist.location || 'Unknown' %></p>
                </div>

                <!-- Right Side -->
                <div class="col-md-8 right-card">
                    <p class="text-orange fw-bold">HELLO, I'M</p>
                    <h2 class="fw-bold text-primary">
                        <%= therapist.user ? therapist.user.username : 'Therapist' %>
                    </h2>
                    <p class="text-muted"><%= therapist.specialization || 'Specialization not provided' %></p>
                    <p><%= therapist.description || 'No description available.' %></p>

                    <!-- Action Buttons -->
                    <div class="d-flex flex-wrap gap-3">
                        <% if (user && user.role === "patient") { %>
                            <form action="/consultations/request/<%= therapist.user ? therapist.user._id : '' %>" method="POST">
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-user-md"></i> Request Consultation
                                </button>
                            </form>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
